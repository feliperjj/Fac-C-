	#include <stdio.h>
		#include <stdlib.h>
		void main ()
		{	
			
			float altura,peso,imc;
		printf("Digite seu peso:");
		scanf("%f",&peso);
		printf("Digite sua altura:");
		scanf("%f",&altura);
		
		imc=peso/(altura*altura);	
			
		if  (imc < 18.5){
		
			printf("Abaixo do peso");
		}
		else
		
		if (imc <=25){
		
		printf("Peso Ideal");
	     }
		
			else
			
				if (imc < 35){
				
				printf("Obesidade Grau 1");
			}
			      else
			
				if(imc<  40){
				
				printf("Obesidade Grau 2");
			}
			
			else
			printf("Obesidade Grau 3");
			
			
